<!-- End Classes Hero Section -->

<!-- Start Classes List Section -->
<div id="classes-section" class="classes-list-section section-space-y-axis-100 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-heading mb-3">CÁC LỚP HỌC SẮP DIỄN RA</h2>
                <div class="section-separator mx-auto mb-3"></div>
                <p class="section-description">Đăng ký ngay hôm nay để đảm bảo chỗ trong các lớp học</p>
            </div>
        </div>
        <div class="row g-4">
            @foreach (var classItem in classes)
            {
                <div class="col-lg-4">
                    <div class="class-card bg-white rounded shadow-sm h-100 overflow-hidden">
                        <div class="class-image position-relative">
                            <img src="@classItem.GetType().GetProperty("ImageUrl").GetValue(classItem, null)" alt="@classItem.GetType().GetProperty("Title").GetValue(classItem, null)" class="img-fluid w-100" style="height: 200px; object-fit: cover;">
                            <div class="class-price position-absolute bottom-0 end-0 bg-primary text-white py-2 px-3 m-3 rounded">
                                @classItem.GetType().GetProperty("Price").GetValue(classItem, null)
                            </div>
                        </div>
                        <div class="class-content p-4">
                            <h3 class="class-title mb-3">@classItem.GetType().GetProperty("Title").GetValue(classItem, null)</h3>
                            <p class="class-description mb-4">@classItem.GetType().GetProperty("Description").GetValue(classItem, null)</p>
                            
                            <div class="class-details mb-4">
                                <div class="row g-3">
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-user-circle me-2 text-primary"></i>
                                            <span>@classItem.GetType().GetProperty("Instructor").GetValue(classItem, null)</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-clock-o me-2 text-primary"></i>
                                            <span>@classItem.GetType().GetProperty("Duration").GetValue(classItem, null)</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-calendar me-2 text-primary"></i>
                                            <span>@classItem.GetType().GetProperty("Date").GetValue(classItem, null)</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-clock me-2 text-primary"></i>
                                            <span>@classItem.GetType().GetProperty("Time").GetValue(classItem, null)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <a href="#" class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#registerModal" data-class-id="@classItem.GetType().GetProperty("Id").GetValue(classItem, null)" data-class-title="@classItem.GetType().GetProperty("Title").GetValue(classItem, null)">Đăng ký ngay</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- End Classes List Section -->


@model IEnumerable<MyPhamSoul.Models.Shipment>

<h2>Đơn vận chuyển đang giao</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Mã GHN</th>
            <th>Phí ship</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>In bill</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.OrderId</td>
            <td>@s.ProviderOrderCode</td>
            <td>@string.Format("{0:#,##0} đ", s.ShippingFee)</td>
            <td>@s.Status</td>
            <td>@s.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
            <td>
                <a class="btn btn-sm btn-primary" target="_blank" href="https://5sao.ghn.dev/order/@s.ProviderOrderCode">In đơn</a>
            </td>
        </tr>
    }
    </tbody>
</table> 